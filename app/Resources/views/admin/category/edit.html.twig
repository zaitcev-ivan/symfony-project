{% extends 'base.admin.html.twig' %}
{% block header_content %}
{% endblock %}
{% block page_content %}

    <div class="box box-solid box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Редактировать категорию</h3>
        </div>
        <div class="box-body">
            {{ form_start(editForm) }}
            <div class="box-body">
                <div class="form-group">
                    <label for="inputName">Название</label>
                    {{ form_widget(editForm.name, {'class' : 'form-control', 'id' : 'inputName'}) }}
                    {{ form_errors(editForm.name) }}
                </div>
                <div class="form-group">
                    <label for="inputParent">Родительская категория</label>
                    {{ form_widget(editForm.parentId, {'class' : 'form-control', 'id' : 'inputParent'}) }}
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary" formnovalidate>Сохранить</button>
            </div>
            {{ form_end(editForm) }}
        </div>
    </div>

{% endblock %}