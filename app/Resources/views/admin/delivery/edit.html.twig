{% extends 'base.admin.html.twig' %}
{% block header_content %}
{% endblock %}
{% block page_content %}

    <div class="box box-solid box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Редактировать метод доставки</h3>
        </div>
        <div class="box-body">
            {{ form_start(editForm) }}
            <div class="box-body">
                <div class="form-group {% if not editForm.name.vars.valid %}has-error{% endif %}">
                    <label for="inputName">Название</label>
                    {{ form_widget(editForm.name, {'class' : 'form-control', 'id' : 'inputName'}) }}
                    {{ form_errors(editForm.name) }}
                </div>
                <div class="form-group {% if not editForm.cost.vars.valid %}has-error{% endif %}">
                    <label for="inputCost">Стоимость доставки</label>
                    {{ form_widget(editForm.cost, {'class' : 'form-control', 'id' : 'inputCost'}) }}
                    {{ form_errors(editForm.cost) }}
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary" formnovalidate>Изменить</button>
            </div>
            {{ form_end(editForm) }}
        </div>
    </div>

{% endblock %}