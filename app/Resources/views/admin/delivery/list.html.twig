{% extends 'base.admin.html.twig' %}
{% block header_content %}
{% endblock %}
{% block page_content %}

    <div class="box box-solid box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Методы доставки</h3>
        </div>
        <div class="box-body">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Название</th>
                    <th>Стоимость доставки</th>
                    <th style="width: 230px;">Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for delivery in deliveryMethodList %}
                    <tr>
                        <td>{{ delivery.name }}</td>
                        <td>{{ delivery.cost }}</td>
                        <td>
                            <a href="{{ path('admin_delivery_edit', {id : delivery.id}) }}" class="btn btn-xs btn-default">Редактировать</a>
                            {{ include('admin/delivery/_delete_form.html.twig', {delivery : delivery}, with_context = false) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" align="center">Методы доставки не созданы</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}