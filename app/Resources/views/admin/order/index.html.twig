{% extends 'base.admin.html.twig' %}
{% block header_content %}
{% endblock %}
{% block page_content %}
    <div class="box box-solid box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Заказы</h3>
        </div>
        <div class="box-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Номер заказа</th>
                        <th>Статус</th>
                        <th>Имя пользователя</th>
                        <th>Телефон</th>
                        <th style="width: 230px;">Действия</th>
                    </tr>
                </thead>
                <tbody>
                {% for order in orderList %}
                    <tr>
                        <td>#{{ order.id }}</td>
                        <td>{{ include('admin/order/_status.html.twig', {status : order.currentStatus}, with_context = false) }}</td>
                        <td>{{ order.userName }}</td>
                        <td>{{ order.userPhone }}</td>
                        <td>
                            <a href="{{ path('admin_order_view', {id : order.id}) }}" class="btn btn-xs btn-default">Просмотр</a>
                            {{ include('admin/order/_delete_form.html.twig', {order : order}, with_context = false) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" align="center">Заказы не созданы</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}