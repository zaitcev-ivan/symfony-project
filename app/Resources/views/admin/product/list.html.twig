{% extends 'base.admin.html.twig' %}
{% block header_content %}
{% endblock %}
{% block page_content %}

    <div class="box box-solid box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Продукты</h3>
        </div>
        <div class="box-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Бренд</th>
                        <th>Категория</th>
                        <th>Название</th>
                        <th>Код</th>
                        <th>Цена</th>
                        <th>Дата создания</th>
                        <th style="width: 230px;">Действия</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in productList %}
                    <tr>
                        <td>{{ product.brand.name }}</td>
                        <td>{{ product.category.name }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.code }}</td>
                        <td>{{ product.price }}</td>
                        <td>{{ product.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td>
                            <a href="{{ path('admin_product_edit', {id : product.id}) }}" class="btn btn-xs btn-default">Редактировать</a>
                            {{ include('admin/product/_delete_form.html.twig', {product : product}, with_context = false) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" align="center">Продукты не созданы</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}