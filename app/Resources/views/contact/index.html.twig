{% extends 'base.html.twig' %}
{% block container %}
    {% block body %}
        <div id="contact-page" class="container">
            <div class="bg">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="contact-form">
                            <h2 class="title text-center">Get In Touch</h2>
                            {{ form_start(contactForm, {'class' : 'contact-form row', 'id' : 'main-contact-form'}) }}
                                <div class="form-group col-md-6">
                                    {{ form_widget(contactForm.name, {'class' : 'form-control'}) }}
                                    {{ form_errors(contactForm.name) }}
                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_widget(contactForm.email, {'class' : 'form-control'}) }}
                                    {{ form_errors(contactForm.email) }}
                                </div>
                                <div class="form-group col-md-12">
                                    {{ form_widget(contactForm.subject, {'class' : 'form-control'}) }}
                                    {{ form_errors(contactForm.subject) }}
                                </div>
                                <div class="form-group col-md-12">
                                    {{ form_widget(contactForm.message, {'class' : 'form-control', 'id' : 'message', 'rows':8}) }}
                                    {{ form_errors(contactForm.message) }}
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="submit" name="submit" class="btn btn-primary pull-right" value="Submit" formnovalidate>
                                </div>
                            {{ form_end(contactForm) }}

                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="contact-info">
                            <h2 class="title text-center">Contact Info</h2>
                            <address>
                                <p>E-Shopper Inc.</p>
                                <p>935 W. Webster Ave New Streets Chicago, IL 60614, NY</p>
                                <p>Newyork USA</p>
                                <p>Mobile: +2346 17 38 93</p>
                                <p>Fax: 1-714-252-0026</p>
                                <p>Email: info@e-shopper.com</p>
                            </address>
                            <div class="social-networks">
                                <h2 class="title text-center">Social Networking</h2>
                                <ul>
                                    <li>
                                        <a href="#"><i class="fa fa-facebook"></i></a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-twitter"></i></a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-google-plus"></i></a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="fa fa-youtube"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/#contact-page-->
    {% endblock %}
{% endblock %}