{% extends 'base.html.twig' %}
{% block container %}
{% block body %}
    <section id="form"><!--form-->
        <div class="container">
            <div class="row">

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="col-sm-4 col-sm-offset-1">

                    <div class="login-form"><!--login form-->
                        <h2>Login to your account</h2>
                        {{ form_start(loginForm, {'action': path('login_index_page')}) }}
                            {{ form_row(loginForm._username) }}
                            {{ form_row(loginForm._password) }}
                            <span>
                                <input type="checkbox" class="checkbox">
                                    Keep me signed in
                            </span>
                            <button type="submit" class="btn btn-default">Войти</button>
                            <br><a href="{{ path('password_reset_request') }}">Забыли пароль?</a>
                        {{ form_end(loginForm) }}

                    </div><!--/login form-->

                </div>
                <div class="col-sm-1">
                    <h2 class="or">OR</h2>
                </div>
                <div class="col-sm-4">
                    <div class="signup-form"><!--sign up form-->
                        <h2>New User Signup!</h2>
                        {{ form_start(registrationForm, {'action': path('user_register')}) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword) }}
                            <button type="submit" class="btn btn-default" formnovalidate>Зарегистрироваться</button>
                        {{ form_end(registrationForm) }}
                    </div><!--/sign up form-->
                </div>
            </div>
        </div>
    </section><!--/form-->
{% endblock %}
{% endblock %}